<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/rfidItemName"
        android:text="Nume obiect"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="250dp"/>
    <CheckBox
        android:id="@+id/rfidCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rfidItemName"
        />
    <TextView
        android:id="@+id/rfidTag"
        android:text="RFID tag"
        android:layout_below="@+id/rfidItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>